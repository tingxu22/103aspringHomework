<h1> Transactions for <%= user.username %> </h1>

  <div class="row">
    <div class="col">
      <p> Here is your transactions grouped by category</p>
    </div>
    
    <ul> 
        <li><a href="/transactions">Transaction Table</a></li>
    </ul>

    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>Category</th>
          <th>Amount</th>
        </tr>
      </thead>
      <tbody>
        <% groupByCategory.forEach(groupByCategory => { %>
          <tr>
            <td><%= groupByCategory._id %></td>
            <td><%= groupByCategory.total %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
</div>
