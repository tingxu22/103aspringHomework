
<h1> Transactions for <%= user.username %> </h1>

  <div class="row">
    <div class="col">
      <p> Here is your transactions! </p>

     
      <p class="m-2">
          <a  class="btn btn-lg btn-primary"
              href="/transaction/groupByCategory">group by category</a>
          <a class="btn btn-lg btn-primary"
              href="?sortBy=category">sort by category</a>
          <a class="btn btn-lg btn-primary"
              href="?sortBy=amount">sort by amount</a>
          <a class="btn btn-lg btn-primary"
              href="?sortBy=description">sort by description</a>
          <a class="btn btn-lg btn-primary"
              href="?sortBy=date">sort by date</a>
      </p>
    
      <table class="table table-bordered table-striped">
        <tr>
            <th>description</th>
            <th>amount</th>
            <th>category</th>
            <th>date</th>
            <th>delete</th>
            <th>edit</th>
        </tr>
        <% transactions.forEach(transaction => { %>
            <tr>
                <td><%= transaction.description %></td>
                <td><%= transaction.amount %></td>
                <td><%= transaction.category %></td>
                <td><%= transaction.date %></td>
                <td><a href="/transaction/remove/<%=transaction._id %>">
                      <i class="bi bi-trash"></i></a>
                </td>
                <td><a href="/transaction/edit/<%=transaction._id %>">
                  <i class="bi bi-pencil-square"></i></a>
                </td>
            </tr>
        <% }) %>
      </table>
       



<form method="post" action="transaction">
   <input type ="text" placeholder="description" name="description"><br>
   <input type ="text" placeholder="category" name="category"><br>
   <input type ="double" placeholder="amount" name="amount"><br>
   <input type="date" placeholder="mm/dd/yyyy" name="date"><br>
   <input type="submit" placeholder="store"><br>
</form>
   
</div>
</div>
